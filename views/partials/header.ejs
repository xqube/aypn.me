<header class="w-full border-b border-line sticky top-0 z-50 bg-surface/80 backdrop-blur-md">
  <nav class="max-w-2xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
    <a href="/"
      class="flex items-center gap-2.5 font-mono text-base text-accent hover:text-accent-hover transition-colors duration-150">
      <img src="/img/logo.svg" alt="" width="28" height="28" class="block">
      aypn
    </a>
    <div class="flex items-center gap-5">
      <a href="/AyyappanPillai.pdf" target="_blank" rel="noopener noreferrer"
        class="font-mono text-sm text-muted hover:text-accent transition-colors duration-200">
        resume
      </a>
      <a href="/blog" class="font-mono text-sm text-muted hover:text-accent transition-colors duration-200">
        blog
      </a>
      <button id="theme-toggle" type="button" aria-label="Toggle dark mode"
        class="p-1.5 rounded text-muted hover:text-heading transition-colors duration-150">
        <!-- Sun icon (shown in dark mode) -->
        <svg class="w-4 h-4 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5" />
          <path
            d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
        </svg>
        <!-- Moon icon (shown in light mode) -->
        <svg class="w-4 h-4 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
        </svg>
      </button>
    </div>
  </nav>
</header>

<script>
  document.getElementById('theme-toggle').addEventListener('click', function () {
    var html = document.documentElement;
    if (html.classList.contains('dark')) {
      html.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      html.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  });
</script>